<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Joomla\Component\Decentralization\Administrator\Field">
	<fieldset name="group_details">
		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>


		<field
			name="id_module"
			type="OptionsModule"
			label="COM_DECENTRALIZATION_ACTIONS_CHOOSE_GROUPS_LABEL"
			validate="options"
			required="true"
			>
			<option value="" disabled="">-- Chọn nhóm chức năng --</option>
		</field>

		<field
			name="name"
			type="text"
			label="COM_DECENTRALIZATION_ACTIONS_TITLE_LABEL"
			required="true"
		/>

		<field
			name="is_module"
			type="radio"

			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">Là module</option>
			<option value="1">Là component</option>
		</field>

		<field
			name="component"
			type="OptionsComponent"
			label="COM_DECENTRALIZATION_ACTIONS_CHOOSE_COMPONENT_LABEL"
			validate="options"
			required="true"
			>
			<option value="" disabled="">-- Chọn component --</option>
		</field>

		<field
			name="controllers"
			type="text"
			label="COM_DECENTRALIZATION_ACTIONS_CONTROLLERS_LABEL"
		/>

		<field
			name="tasks"
			type="text"
			label="COM_DECENTRALIZATION_ACTIONS_TASK_LABEL"
		/>

		<field
			name="location"
			type="list"
			label="COM_DECENTRALIZATION_ACTIONS_CHOOSE_LOCALTION_LABEL"
			validate="options"
			class="js-select-submit-on-change"
			>
			<option value="site">JSITE</option>
			<option value="admin">JADMINISTRATOR</option>
		</field>

		<field
			name="status"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>
</form>
