<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Joomla\Component\Decentralization\Administrator\Field">
	<fieldset name="group_details">
		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			name="title"
			type="text"
			label="COM_DECENTRALIZATION_GROUP_TITLE_LABEL"
			required="true"
		/>

		<field
			name="parent_id"
			type="groupparent"
			label="COM_DECENTRALIZATION_GROUP_CHOOSE_GROUPS_LABEL"
			validate="options"
			>
			<option value="0" disabled="disabled">-- Chọn nhóm cha --</option>
		</field>

		<field
			name="actions"
			type="hidden"
			filter="unset"
		/>

		<field
			name="lft"
			type="hidden"
			filter="unset"
		/>

		<field
			name="rgt"
			type="hidden"
			filter="unset"
		/>
	</fieldset>
</form>
