<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			default="0"
			readonly="true"
			required="true"
		/>

		<field
			name="name"
			type="text"
			label="COM_DECENTRALIZATION_MODULE_TITLE_LABEL"
			required="true"
		/>

		<field
			name="code"
			type="text"
			label="COM_DECENTRALIZATION_MODULE_CODE_LABEL"
		/>

		<field
			name="description"
			type="text"
			label="COM_DECENTRALIZATION_MODULE_DESC_LABEL"
		/>

		<field
			name="status"
			type="radio"
			label="COM_DECENTRALIZATION_MODULE_STATUS_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">Không sử dụng</option>
			<option value="1">Sử dụng</option>
		</field>
	</fieldset>
</form>
