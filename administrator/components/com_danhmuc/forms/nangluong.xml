<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Joomla\Component\Danhmuc\Administrator\Field">
	<fieldset>
		<field
			name="code"
			type="hidden"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			name="name"
			type="text"
			label="COM_DANHMUC_HINHTHUCNANGLUONG_TITLE_LABEL"
			required="true"
		/>
		<field
			name="raise_salary"
			type="radio"
			label="COM_DANHMUC_HINHTHUCNANGLUONG_NANGLUONG_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">Không</option>
			<option value="1">Có</option>
		</field>
		<field
			name="receive_money"
			type="radio"
			label="COM_DANHMUC_HINHTHUCNANGLUONG_NHANTIEN_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">Không</option>
			<option value="1">Có</option>
		</field>
		<field
			name="percent"
			type="text"
			label="COM_DANHMUC_HINHTHUCNANGLUONG_PHANTRAM_LABEL"
			required="true"
		/>

		<field
			name="status"
			type="radio"
			label="COM_DANHMUC_HINHTHUCNANGLUONG_STATUS_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">Không sử dụng</option>
			<option value="1">Sử dụng</option>
		</field>


		<field
			name="nangluong"
			type="hidden"
			filter="unset"
		/>

	</fieldset>
</form>
